# vim: filetype=sh nospell
# Read `man 5 sway` for a complete reference.

### Variables ----------------------------------------------------------------
#

# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $super Mod4
set $alt Mod1
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l


### Output --------------------------------------------------------------------

# wallpaper
output * background "~/.cache/wallpaper" fill

### Input ---------------------------------------------------------------------
#

# support US and German keyboard layouts
input * xkb_layout "us,de"

# switch keyboard layout
bindsym $super+Space exec swaymsg input type:keyboard xkb_switch_layout next

### Appearance ----------------------------------------------------------------
#

default_border pixel 3
gaps inner 6
smart_gaps on
smart_borders smart

# class                 title brd.   backgr.   text      indicator  border
client.focused          #900000      #ffffff   #000000   #2e9ef4    #ff7f50
client.focused_inactive #333333      #ffffff   #000000   #292d2e    #333333
client.unfocused        #333333      #ffffff   #000000   #292d2e    #333333

### Floating -------------------------------------------------------------------
#

# Toggle the current focus between tiling and floating mode
bindsym $super+Shift+f floating toggle

# Swap focus between the tiling area and the floating area
bindsym $super+t focus mode_toggle

# Get an app_id with: `swaymsg -t get_tree | grep app_id`
#
# Applications which start by default floating
for_window [app_id="wdisplays"] floating enable
for_window [app_id="pavucontrol"] floating enable

### Key bindings ---------------------------------------------------------------

# Start a terminal
bindsym $mod+Return exec foot
bindsym $alt+1 exec terminator

# kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $alt+2 exec swaymsg exec $(wofi --show run)

# start bookmark menu
bindsym $alt+3 exec /usr/local/bin/wofi-bookmarks

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $super+Shift+c reload
# restart (preserves your layout/session, can be used to upgrade)
bindsym $super+Shift+r restart
# lock the screen
set $lock exec bash ~/.config/sway/lock.sh
bindsym $super+9 $lock
# exit Sway session
bindsym $super+0 exec swaymsg exit

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
    
# split orientation
bindsym $mod+Shift+bar split h; exec notify-send 'tile horizontally'
bindsym $mod+minus split v; exec notify-send 'tile vertically'

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $super+f fullscreen
# Move focus to the parent container
bindsym $mod+a focus parent

# Resizing containers:
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Status Bar ---------------------------------------------------------------
#

bar {

    #
    # Read `man 5 sway-bar` for more information about this section.
    #
    position top
    font monospace 11

    # Colors are defined within a colors { } block inside a bar { } block. 
    # Colors must be defined in hex: #RRGGBB or #RRGGBBAA
    colors {
        statusline #000000
        background #ffffffaa
                           #border   #background #text
        inactive_workspace #0000cdaa #1e90ffaa   #ffffff
        focused_workspace  #b8860baa #ffd700aa   #000000
        urgent_workspace   #800000aa #a52a2aaa   #ffffff
    }
   
    # execute the status command
    status_command while ~/.config/sway/status.sh ; do sleep 1 ; done
    status_edge_padding 5

}
