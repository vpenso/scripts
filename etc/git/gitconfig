# vim: filetype=systemd nospell noexpandtab

[user]
	name = Victor Penso
	email = vic.penso@gmail.com

[advice]
	addIgnoredFile =false

[push]
	default = current

[pull]
	rebase = false
	ff = only

[gc]
	auto = 1

[core]
	editor = vim
	quotepath = off
	excludesfile = /home/vpenso/.gitignore_global

[alias]
	a = add
	ac = apply --check
	aliases = !git config -l | grep alias | cut -c 7-
	amend = commit --amend
	ams = am --signoff
	as = apply --stat
	b = branch
	ba = branch -a
	bc = checkout -b
	bd = branch -D
	c = log --pretty=format:\"%C(yellow)%h%Cred%d %Creset%s%Cblue (%cn)\" --decorate --numstat
	ca = commit -a
	ce = commit --allow-empty
	ci = commit
	co = checkout
	dc = diff --cached
	di = diff
	gc-all = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
	l = log --pretty=format:\"%C(yellow dim)%h%Creset %C(white dim)%cr%Creset â”€ %s %C(blue dim)(%cn)%Creset\"
	last = log -1 --stat
	lg = log --graph --all --color --numstat --decorate --pretty=format:\"%C(yellow)%h%Cred%d %Creset%s%Cblue (%cn)\"	
	ls = ls-files -t --exclude-per-directory=.gitignore --exclude-from=.git/info/exclude
	ls-ignored = ls-files --exclude-standard --ignored --others
	m = merge
	ms = merge --squash
	patches = git log -p --no-merges
	pl = pull --ff-only
	plr = pull --rebase
	plt = pull --tags
	pu = push
	r = remote -v
	rb = rebase
	rbi = rebase --interactive
	ri = repos init
	rls = ls-remote
	rlst = ls-remote --tags
	rs = repos status
	s = status -sb
	tags = tag -n1 -l
	uncommit = reset --soft HEAD^
	undo = reset --hard
	unpushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
	unstage = reset HEAD --
	what = whatchanged
	who = shortlog -s --
[color]
	branch = auto
	interactive = auto
	diff = auto
	status = auto
	ui = auto
[color "branch"]
	current = yellow dim
	local = green dim
	remote = blue dim
[color "diff"]
	meta = yellow dim
	frag = blue dim
	old = red
	new = green
[color "status"]
	added = green dim
	changed = yellow dim
	untracked = red dim
[i18n]
	logoutputencoding = utf8
	commitencoding = utf8
[apply]
	whitespace = nowarn

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
