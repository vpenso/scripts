{
    "layer": "top",
    "height": 20,
    "margin": 5,
    "modules-left": ["custom/clock", "pulseaudio", "mpd" ],
    "modules-center": [ "sway/workspaces", "sway/mode" ],
    "modules-right": [ "network", "cpu", "memory", "battery", "tray"],
    "battery": {
        "format": "{icon} {capacity}%",
        "format-time": "{H}:{M}",
        "format-charging": "<span color='#f53c3c'> </span>({time}) {icon} {capacity}%",
        "format-plugged":  "  {icon} {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },
    "sway/mode": {
        "format": " <span color='#f53c3c'> </span>{} ",
        "max-length": 70
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "custom/clock": {
        "exec": "date +'%Y/%m/%d %H:%M'",
        "interval": 5
    },
    "cpu": {
        "format": " {load}%",
        "interval": 1
    },
    "memory": {
        "format": " {avail:0.1f}G"
    },
    "network": {
        "format": " {ifname} | {ipaddr}/{cidr}",
        "format-wifi": " {essid} | {signaldBm}dBm {frequency}MHz",
        "tooltip-format-wifi": "{ifname} | {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{format_source} {icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "{format_source} <span color='#f53c3c'></span>",
        "format-icons": {
              "headphone": "",
              "hands-free": "",
              "headset": "",
              "phone": "",
              "portable": "",
              "car": "",
              "default": ["", ""]
         },
         "format-source": "<span color='#008000'></span>",
         "format-source-muted": "<span color='#f53c3c'></span>",
         "scroll-step": 1,
         "on-click": "pavucontrol"
    },
    "mpd": {
	"format": "{stateIcon} {songPosition}/{queueLength} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
	"format-disconnected": " Disconnected",
	"format-stopped": " Stopped",
	"interval": 10,
	"state-icons": {
		"paused": "",
		"playing": ""
	},
	"tooltip-format": "{artist} - {title}",
	"tooltip-format-disconnected": "MPD (disconnected)"
    }
}
