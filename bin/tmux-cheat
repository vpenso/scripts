#!/bin/bash

echo \
"                   ┬
    <C-a> ?        │ show key binding
    <C-a> r        │ reload ~/.tmux.conf
    <C-a> x        │ close pane
    <C-a> c        │ new window
    <C-a> ,        │ rename window
    <C-a> {np}     │ next/previous window
    <C-a> w        │ list windows
    <C-a> d        │ detach from session (run tmux attach)
    <C-a> a        │ send prefix key to program in pane 

          Copy & paste (Vi style)
                   ┬
    <C-a> [        │ copy mode
    q, <Esc>       │ exit copy mode
    <C-a> /        │ copy mode, start search
    n              │ next result
    ⇧ n            │ previous result 
    h,j,k,l        │ navigate to selection
    v,Space        │ start selection
    y,Enter        │ copy selection
    <C-a> ]        │ paste selection

             Plugin manager
                   ┬
    <C-a> I        │ install plugins in ~/.tmux/plugins/
    <C-a> U        │ update plugins
    <C-a> <A-u>    │ uninstall plugins

           Pain control plugin
                   ┬
    <C-a> {hjkl}   │ select pane left|below|above|right
    <C-a> {HJKL}   │ resize pane left|down|up|right 
    <C-a> |        │ split current pane horizontally
    <C-a> -        │ split current pane vertically
    <C-a> \        │ split current pane full width horizontally
    <C-a> _        │ split current pane full width vertically

             Copycat plugin
                   ┬
    <C-a> /        │ regex search (strings work too)
    <C-a> <C-u>    │ url search (http, ftp and git urls)
    <C-a> <C-f>    │ file search
    n              │ jumps to the next match
    N              │ jumps to the previous match
    o              │ open a highlighted selection
    <C-o>          │ open a highlighted selection with the \$EDITOR
    S              │ search the highlighted selection with search engine 

              Yank plugin
                   ┬
    y              │ copy mode selection to clipboard
    <C-a> y        │ copy text from CLI to clipboard
    <C-a> Y        │ copy working directory to the clipboard
"
