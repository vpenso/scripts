                dnsutils \
                encfs \
                fd-find \
		firefox-esr \
                fzf \
                git \
                mpd \
                mpc \
                mupdf \
                ncmpc \
		pmount \
                psmisc \
                python \
                rsync \
                ruby \
                sshfs \
                sshuttle \
                tcpdump \
                tmux \
                tree \
                vim \
                wget \
		vlc \
                zsh
        fc-cache -f # build font information cache files
fi
