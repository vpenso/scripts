# work in a disposable directory
pushd $(mktemp -d /tmp/quarto-install-XXXXX) 

# required version can be passed as first argument
version=${1:-1.8.26}
wget https://github.com/quarto-dev/quarto-cli/releases/download/v${version}/quarto-${version}-linux-amd64.tar.gz

# install quarto
mkdir ~/opt ~/bin
tar -C ~/opt -xvzf quarto-${version}-linux-amd64.tar.gz
ln -s ~/opt/quarto-${version}/bin/quarto ~/bin/quarto

popd
rm -rf /tmp/quarto-install*

quarto check
