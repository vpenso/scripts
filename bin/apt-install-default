                dnsutils \
                encfs \
                fd-find \
                fzf \
                git \
		iwd \
                mpd \
                mpc \
		neovim \
		pmount \
                psmisc \
                python \
                rsync \
                ruby \
                sshfs \
                sshuttle \
                tcpdump \
                tmux \
                tree \
                vim \
                wget \
                zsh
fi
