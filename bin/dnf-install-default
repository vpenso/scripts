#!/usr/bin/env bash

if command -v dnf >/dev/null
then

        sudo dnf install -y \
                age \
                apg \
                bat \
                bc \
                btop \
                curl \
                dnsutils \
                fd-find \
                fzf \
                git \
                git-delta \
                jpegoptim \
                lsd \
                make \
                netcat \
                openssl \
                pandoc \
                pmount \
                psmisc \
                ptyxis \
                python \
                rsync \
                ruby \
                ripgrep \
                sshfs \
                sshuttle \
                tcpdump \
                tree \
                wget \
                wl-clipboard
        # clean up packages installed by default
        sudo dnf remove -y \
                thunderbird
fi
